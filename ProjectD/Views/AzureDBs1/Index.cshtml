@model IEnumerable<ProjectD.Models.AzureDB>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.市集名稱)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.市集介紹)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.營業時間)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.電話)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GPS)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.營業地址)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.交通資訊)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.市集名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.市集介紹)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.營業時間)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GPS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.營業地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.交通資訊)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.縣市">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.縣市">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.縣市">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
